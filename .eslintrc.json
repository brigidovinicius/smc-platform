{
  "root": true,
  "extends": ["next", "next/core-web-vitals"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["warn", "error"]
      }
    ],
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "@next/next/no-html-link-for-pages": "error"
  }
}
